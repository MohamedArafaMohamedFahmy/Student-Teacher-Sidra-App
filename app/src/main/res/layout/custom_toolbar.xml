<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textDirection="rtl"
    android:layoutDirection="rtl"
    android:padding="16dp"
    android:background="@color/general_app"
    >

   <com.balysv.materialripple.MaterialRippleLayout
       android:id="@+id/ripple_back_arrow"
       style="@style/RippleStyleGrey"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="3dp"
       android:layout_alignParentEnd="true"
       >

   <androidx.appcompat.widget.AppCompatImageButton
       android:id="@+id/button_back_arrow"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:src="@drawable/ic_baseline_arrow_forward_24"
       android:background="@color/transparent"
       />

   </com.balysv.materialripple.MaterialRippleLayout>

   <androidx.appcompat.widget.AppCompatTextView
       android:id="@+id/text_toolbar"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:textColor="@color/white"
       android:textStyle="bold"
       android:textSize="18sp"
       android:fontFamily="@font/cairo_extralight"
       android:layout_alignParentEnd="true"
       android:layout_toEndOf="@id/ripple_rating"
       android:layout_marginEnd="30dp"
       />

   <com.balysv.materialripple.MaterialRippleLayout
       android:id="@+id/ripple_rating"
       style="@style/RippleStyleGrey"
       android:layout_width="25dp"
       android:layout_height="25dp"
       android:layout_toEndOf="@id/ripple_log_out"
       android:layout_marginStart="20dp"
       >

   <androidx.appcompat.widget.AppCompatImageButton
       android:id="@+id/button_rating"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:src="@drawable/ic_baseline_check_24"
       android:background="@color/transparent"
       android:visibility="gone"

       />
   </com.balysv.materialripple.MaterialRippleLayout>

   <com.balysv.materialripple.MaterialRippleLayout
       android:id="@+id/ripple_log_out"
       style="@style/RippleStyleGrey"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentStart="true"
       >

   <androidx.appcompat.widget.AppCompatImageButton
       android:id="@+id/button_log_out"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:src="@drawable/ic_logout"
       android:background="@color/transparent"
       android:visibility="gone"

       />
   </com.balysv.materialripple.MaterialRippleLayout>

</RelativeLayout>